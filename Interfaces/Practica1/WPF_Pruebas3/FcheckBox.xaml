<Window x:Class="WPF_Pruebas3.FcheckBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Pruebas3"
        mc:Ignorable="d"
        Title="FcheckBox" Height="450" Width="800">
    <StackPanel>
        <RadioButton GroupName="color" Content="Azul" IsChecked="false" HorizontalAlignment="Center" ToolTip="seleccione el color que prefiera"/>
        <RadioButton GroupName="color" Content="Rojo" IsChecked="false"/>
        
        <RadioButton GroupName="color" Content="Amarillo" IsChecked="false">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="5" ScaleY="5"/>
            </RadioButton.LayoutTransform>
        </RadioButton>
            <RadioButton GroupName="color" Content="Riki" IsChecked="true"/>

        <RadioButton GroupName="coche" Content="Mazdita" IsChecked="true"/>
        <RadioButton GroupName="coche" Content="Nissan" IsChecked="false"/>
        <RadioButton GroupName="coche" Content="Toyoting" IsChecked="false"/>
    </StackPanel>
</Window>
