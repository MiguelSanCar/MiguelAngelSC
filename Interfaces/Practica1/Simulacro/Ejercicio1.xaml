<Window x:Class="Simulacro.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulacro"
        mc:Ignorable="d"
        Title="Ejercicio1" Height="275" Width="535">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" >
            <Label Content="Ejercicio 1" Foreground="Brown" HorizontalAlignment="Center"/>
            <TextBox Margin="5" Height="30" Name="textbox1"/>
        </StackPanel>
        <Button Content="Saludar" Margin="5" Grid.Row="1" Click="Button_Click"/>
        <Label Margin="5" Name="mostrar" Grid.Row="2"/>
    </Grid>
</Window>
