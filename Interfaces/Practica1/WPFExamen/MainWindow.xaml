<Window x:Class="WPFExamen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExamen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Botón 1" Margin="10" Click="Button_Click"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Botón 2" Margin="10"/>
        <Button Grid.Column="0" Grid.Row="2" Content="Botón 3" Margin="10"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Botón 4" Margin="10"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Botón 5" Margin="10"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Botón 6" Margin="10"/>
    </Grid>
</Window>
